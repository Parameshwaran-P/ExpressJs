<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node CRUD</title>
</head>
<body>
    <h1>Node CRUD</h1>
    {{message}}
    <br>
    {{#if edit_id}}
    <h3>Update</h3>
    <form action="/update_book/{{edit_id}}" method="post">
        <label for="title">Title</label>
        <input type="text" name="title" value={{edit_book.title}}>
        <label for="title">Author</label>
        <input type="text" name="author" value={{edit_book.author}}>
        <input type="submit">
    </form><br><br>
    {{else}}
    <h3>Create</h3>
    <form action="/create_book" method="post">
        <label for="title">Title</label>
        <input type="text" name="title">
        <label for="title">Author</label>
        <input type="text" name="author">
        <input type="submit">
    </form><br><br>
     {{/if}}
    <ul>
        {{#each book}}
        <li>{{this.title}} - {{this.author}} <a href="/?edit_id={{this._id}}">Edit</a></li>
        {{/each}}
    </ul>
</body>
</html>